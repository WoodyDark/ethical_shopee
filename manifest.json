{
  "name": "Ethical Shopee",
  "description": "Highlights all the ads on the Shopee site to easily distinguish between real listing and ads.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://shopee.com.my",
        "https://shopee.sg",
        "https://shopee.co.id",
        "https://shopee.co.th",
        "https://shopee.vn",
        "https://shopee.ph",
        "https://shopee.com",
        "https://shopee.tw"
      ],
      "css": ["index.css"]
    }
  ]
}
